<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lakeel.altla.vision.builder">

    <uses-permission android:name="android.permission.CAMERA"/>

    <application
            android:name=".presentation.app.MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="${GOOGLE_API_KEY}"/>

        <activity
                android:name=".presentation.view.activity.MainActivity"
                android:configChanges="orientation|screenSize"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".presentation.view.activity.ArActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".presentation.view.activity.SettingsActivity"
                android:label="@string/title_settings_view"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".presentation.view.activity.ArActivity"/>
        </activity>
        <activity
                android:name=".presentation.view.activity.AreaSettingsActivity"
                android:label="@string/title_area_settings_view"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".presentation.view.activity.ArActivity"/>
        </activity>
    </application>

</manifest>