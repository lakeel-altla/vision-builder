<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:paddingBottom="@dimen/content_vertical_margin"
              android:paddingLeft="@dimen/content_horizontal_margin"
              android:paddingRight="@dimen/content_horizontal_margin"
              android:paddingTop="@dimen/content_vertical_margin"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.lakeel.altla.vision.builder.presentation.view.fragment.AreaSettingsFragment">

    <TextView android:text="@string/label_area_mode"
              android:textAppearance="@style/TextAppearance.AppCompat.Body1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <ImageButton android:id="@+id/image_button_area_mode"
                     android:src="@drawable/ic_mode_edit_black_24dp"
                     android:background="?android:attr/actionBarItemBackground"
                     android:tint="@color/background_image_button"
                     android:layout_width="@dimen/touch_target_width"
                     android:layout_height="@dimen/touch_target_height"/>

        <TextView android:id="@+id/text_view_area_mode"
                  android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                  android:layout_marginStart="@dimen/content_horizontal_margin"
                  android:layout_gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView android:text="@string/label_area"
              android:textAppearance="@style/TextAppearance.AppCompat.Body1"
              android:layout_marginTop="@dimen/content_vertical_margin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <ImageButton android:id="@+id/image_button_area_find"
                     android:src="@drawable/ic_mode_edit_black_24dp"
                     android:background="?android:attr/actionBarItemBackground"
                     android:tint="@color/background_image_button"
                     android:layout_width="@dimen/touch_target_width"
                     android:layout_height="@dimen/touch_target_height"/>

        <TextView android:id="@+id/text_view_area_name"
                  android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                  android:layout_marginStart="@dimen/content_horizontal_margin"
                  android:layout_gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView android:text="@string/label_area_description"
              android:textAppearance="@style/TextAppearance.AppCompat.Body1"
              android:layout_marginTop="@dimen/content_vertical_margin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <ImageButton android:id="@+id/image_button_show_area_description_list"
                     android:src="@drawable/ic_mode_edit_black_24dp"
                     android:background="?android:attr/actionBarItemBackground"
                     android:tint="@color/background_image_button"
                     android:layout_width="@dimen/touch_target_width"
                     android:layout_height="@dimen/touch_target_height"/>

        <TextView android:id="@+id/text_view_area_description_name"
                  android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                  android:layout_marginStart="@dimen/content_horizontal_margin"
                  android:layout_gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button android:id="@+id/button_start"
            android:text="@string/button_start"
            android:background="@color/background_button"
            android:textColor="@color/foreground_button"
            android:layout_marginTop="@dimen/content_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>
