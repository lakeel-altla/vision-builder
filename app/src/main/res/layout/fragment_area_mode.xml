<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:paddingBottom="@dimen/content_vertical_margin"
             android:paddingLeft="@dimen/content_horizontal_margin"
             android:paddingRight="@dimen/content_horizontal_margin"
             android:paddingTop="@dimen/content_vertical_margin"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.lakeel.altla.vision.builder.presentation.view.fragment.AreaModeFragment">

    <RadioGroup android:id="@+id/radio_group_scope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_button_public"
                android:text="@string/radio_button_public"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_button_user"
                android:text="@string/radio_button_user"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RadioGroup>

</FrameLayout>
