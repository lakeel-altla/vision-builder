<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginStart="@dimen/content_horizontal_margin"
                android:layout_marginEnd="@dimen/content_horizontal_margin"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:layout_marginBottom="@dimen/content_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageButton android:id="@+id/image_button_show_area_settings"
                 android:src="@drawable/ic_map_black_24dp"
                 android:tint="@color/foreground_overlay"
                 android:background="@drawable/button_background_circle"
                 android:layout_width="@dimen/touch_target_width"
                 android:layout_height="@dimen/touch_target_height"/>

    <ImageButton android:id="@+id/image_button_expand_options"
                 android:src="@drawable/ic_more_vert_black_24dp"
                 android:tint="@color/foreground_overlay"
                 android:background="@drawable/button_background_circle"
                 android:layout_toEndOf="@id/image_button_show_area_settings"
                 android:layout_marginStart="@dimen/content_vertical_margin"
                 android:layout_width="@dimen/touch_target_width"
                 android:layout_height="@dimen/touch_target_height"/>

    <LinearLayout android:id="@+id/view_group_options"
                  android:orientation="vertical"
                  android:layout_marginTop="@dimen/content_vertical_margin"
                  android:layout_below="@id/image_button_expand_options"
                  android:layout_alignStart="@id/image_button_expand_options"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

        <Button android:id="@+id/button_switch_to_edit_mode"
                android:text="@string/button_switch_to_edit_mode"
                android:textAlignment="viewStart"
                android:textColor="@color/foreground_button"
                android:background="@drawable/button_background"
                android:paddingStart="@dimen/content_horizontal_margin"
                android:paddingEnd="@dimen/content_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button android:id="@+id/button_show_settings"
                android:text="@string/button_show_settings"
                android:textAlignment="viewStart"
                android:textColor="@color/foreground_button"
                android:background="@drawable/button_background"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:paddingStart="@dimen/content_horizontal_margin"
                android:paddingEnd="@dimen/content_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
